@model Website_BĐS.Models.USER

@{
    ViewBag.Title = "RegisterAccount";
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Register</title>
    <link href="~/Content/style.css" rel="stylesheet" />

</head>
<body>
    <div class="wrapper">
        <div class="container" style="margin-top:3%">
            <h1>Create your Account</h1>

            <form action="~/Account/Login" method="post" class="Login">
                <input type="text" name="email" placeholder="Username" required />
                <input type="password" name="password" placeholder="Password" required />
                <input type="password" name="confirmpassword" placeholder="Confirm Password" required />
                <input type="text" name="FullName" placeholder="Full Name" required />
                <input type="number" name="Phone" placeholder="Phone" required />
                <input type="text" name="Address" placeholder="Address" required />
                <button type="submit" class="submit" id="login-button">Register</button>
                <p>
                    <a href="~/Home/Index" style="margin-left:28%"> Home</a>
                    <a href="~/Account/Login" style="margin-left:2%">Login</a>
                </p>
            </form>
        </div>

        <ul class="bg-bubbles">
            <li></li>
            <li></li>
