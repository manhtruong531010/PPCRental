@model Website_BĐS.Models.PROPERTY

@{
    ViewBag.Title = "Create";
    Layout = "~/Areas/Admins/Views/Shared/_AdminLayout.cshtml";
}

<h2>Create Property</h2>


@using (Html.BeginForm("Create", "Admin", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <hr />
        @Html.ValidationSummary(true)

        <div class="form-group">
            @Html.LabelFor(model => model.PropertyName, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.PropertyName)
                @Html.ValidationMessageFor(model => model.PropertyName)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Avatar, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-4">
                <div>
                    <input type="file" name="AvatarFile" />
                </div>
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.Images, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-4">
                <div>
                    <input type="file" name="files" multiple />
                </div>
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.PropertyType_ID, "Property Type", new { @class = "control-label col-md-2" })
            <div class="col-md-4">
                @Html.DropDownList("PropertyType_ID", new SelectList(ViewBag.ptype, "ID", "CodeType"), new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.PropertyType_ID)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Content, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.TextAreaFor(model => model.Content, new { @class = "required", @cols = 40, @rows = 10, @style = "width:500px; height:200px" })
                @Html.ValidationMessageFor(model => model.Content)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.District_ID, "District_ID", new { @class = "control-label col-md-2" })
            <div class="col-md-4">
                @Html.DropDownList("District_ID", new SelectList(ViewBag.district, "ID", "DistrictName"), new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.District_ID)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Ward_ID, "Ward_ID", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-4">
                @Html.DropDownList("Ward_ID", new SelectList(ViewBag.ward, "ID", "WardName"), new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.Ward_ID)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Street_ID, "Street_ID", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-4">
                @Html.DropDownList("Street_ID", new SelectList(ViewBag.street, "ID", "StreetName"), new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.Street_ID)
            </div>
        </div>


        <div class="form-group">
            @Html.LabelFor(model => model.Price, new { @class = "control-label col-md-2" })
            <label style="padding-top:1%">Vnd</label>
            <div class="col-md-4">
                @Html.TextBoxFor(model => model.Price, new { @class = "form-control", @type = "number" })
                @Html.ValidationMessageFor(model => model.Price)
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.Area, htmlAttributes: new { @class = "control-label col-md-2" })
            <label style="padding-top:1%">m2</label>

            <div class="col-md-4">
                @Html.TextBoxFor(model => model.Area, new { @class = "form-control", @type = "number" })
                @Html.ValidationMessageFor(model => model.Area)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.BedRoom, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-4">
                @Html.TextBoxFor(model => model.BedRoom, new { @class = "form-control", @type = "number" })
                @Html.ValidationMessageFor(model => model.BedRoom)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.BathRoom, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-4">
                @Html.TextBoxFor(model => model.BathRoom, new { @class = "form-control", @type = "number" })
                @Html.ValidationMessageFor(model => model.BathRoom)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.PackingPlace, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-4">
                @Html.TextBoxFor(model => model.PackingPlace, new { @class = "form-control", @type = "number" })
                @Html.ValidationMessageFor(model => model.PackingPlace)
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.Status_ID, "Status_ID", new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownList("Status_ID", new SelectList(ViewBag.status, "ID", "Status_Name"), new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.Status_ID)
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.Note, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Note)
                @Html.ValidationMessageFor(model => model.Note)
            </div>
        </div> 

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <div class="col-md-6">
                </div>
                <div class="col-md-2">
                    <input type="submit" value="Post" class="btn btn-primary" style=" margin-bottom:3%; width:100%" />
                </div>
                <div class="col-md-4">
                    <input type="submit" value="Draf" class="btn btn-primary" style=" margin-bottom:3%; width:45%" />
                </div>
            </div>
        </div>
    </div>
    
}

